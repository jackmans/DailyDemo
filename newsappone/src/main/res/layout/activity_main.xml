<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:id="@+id/fl_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <TextView
        android:layout_above="@+id/ly_btm_titleBar"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#f0eef3"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginBottom="0dp"
        android:id="@+id/ly_btm_titleBar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#00f8f4f4"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tv_news"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_width="20dp"
            android:src="@drawable/main_btm_news"
            android:text="新闻"/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tv_recommend"
            android:layout_height="60dp"
            android:layout_width="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/main_btm_recomend"
            android:text="推荐"/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tv_live"
            android:layout_height="50dp"
            android:layout_width="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/main_btm_live"
            android:text="直播"/>

        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/tv_setting"
            android:layout_height="40dp"
            android:layout_width="20dp"
            android:src="@drawable/main_btm_setting"
            android:text="设置"/>

    </LinearLayout>
</LinearLayout>
