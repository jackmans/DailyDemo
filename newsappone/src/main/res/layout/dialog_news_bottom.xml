<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_run"
        android:src="@drawable/iv_run"/>

    <ImageView
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_taxi"
        android:src="@drawable/iv_taxi"/>

    <ImageView
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_work"
        android:src="@drawable/iv_work"/>

    <ImageView
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_train"
        android:src="@drawable/iv_train"/>
    </LinearLayout>

    <TextView
        android:layout_above="@+id/ly_btm_titleBar"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#f0eef3"/>

    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cancel"
        android:gravity="center"
        android:text="取消"/>
</LinearLayout>
